{
  "name": "@natlibfi/melinda-transliteration",
  "version": "1.0.0",
  "description": "UI for transliterating MARC records in Melinda",
  "keywords": [
    "MARC",
    "Melinda",
    "transliteration"
  ],
  "homepage": "https://github.com/natlibfi/melinda-transliteration-ui",
  "bugs": {
    "url": "https://github.com/natlibfi/melinda-transliteration-ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:natlibfi/melinda-transliteration-ui.git"
  },
  "author": {
    "name": "The National Library of Finland"
  },
  "license": "AGPL-3.0",
  "main": "index.js",
  "scripts": {
    "clean:build": "node ./bin/clean.js createdir",
    "build:html": "node ./bin/buildHtml.js",
    "start": "NODE_PATH=build/commons node build/index.js",
    "prebuild": "npm run clean:build && npm run build:html",
    "build": "npm run build:server && npm run build:commons && npm run build:frontend",
    "build:frontend": "export NODE_ENV=production & NODE_ENV=production & webpack -p --config ./config/webpack.config.prod.js --progress --bail",
    "build:server": "babel server --ignore spec.js --out-dir build --source-maps",
    "build:commons": "babel melinda-ui-commons --ignore node_modules,spec.js --out-dir build/commons --source-maps",
    "test": "npm run lint && npm run test:frontend && npm run test:server",
    "test:frontend": "BABEL_ENV=test mocha --compilers js:babel-core/register --require ignore-styles --require ./frontend/test_helpers/test_bootstrap.js \"frontend/**/*@(.spec.js|.spec.jsx)\" \"melinda-ui-commons/frontend/**/*@(.spec.js|.spec.jsx)\"",
    "test:frontend:watch": "npm run test:frontend -- --watch",
    "test:server": "NODE_PATH=melinda-ui-commons BABEL_ENV=test mocha --compilers js:babel-core/register --require ./server/test_helpers/test_bootstrap.js \"./server/**/*@(.spec.js|.spec.jsx)\" \"./melinda-ui-commons/server/**/*@(.spec.js|.spec.jsx)\"",
    "test:server:watch": "npm run test:server -- --watch",
    "lint": "eslint --ext .jsx,.js .",
    "dev": "node ./bin/clean.js && npm run watch",
    "watch": "npm run watch:ui & npm run watch:server",
    "watch:ui": "DEBUG=1 webpack-dev-server --config ./config/webpack.config.dev.js --hot --inline --progres",
    "watch:server": "NODE_PATH=melinda-ui-commons NODE_ENV=debug nodemon --watch server --exec babel-node --presets=es2015 server/index.js",
    "cli": "babel-node ./bin/cli.js",
    "publish-to-npm": "npm run test && npm publish --access=public"
  },
  "dependencies": {
    "@natlibfi/melinda-api-client": "^1.1.4",
    "body-parser": "^1.15.2",
    "classnames": "^2.2.5",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.0",
    "es6-promise": "^3.2.1",
    "es6-promisify": "^4.1.0",
    "express": "^4.14.0",
    "express-winston": "^2.0.0",
    "fbjs": "^0.8.3",
    "fs-extra": "^1.0.0",
    "history": "^4.7.2",
    "http-status-codes": "^1.0.6",
    "immutable": "^3.8.1",
    "iso9_1995": "0.0.2",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.15.0",
    "marc-record-js": "^0.3.1",
    "marc-record-serializers": "1.1.1",
    "node-uuid": "^1.4.7",
    "object-assign": "^4.1.0",
    "winston": "^2.2.0",
    "xml2js": "^0.4.17"
  },
  "devDependencies": {
    "autoprefixer": "^6.4.0",
    "babel-cli": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.5",
    "babel-plugin-module-resolver": "^2.3.0",
    "babel-plugin-rewire": "^1.0.0-rc-7",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-2": "^6.13.0",
    "chai": "^3.5.0",
    "chai-immutable": "^1.6.0",
    "cheerio": "^0.22.0",
    "colors": "^1.1.2",
    "copy-webpack-plugin": "^3.0.1",
    "css-loader": "^0.24.0",
    "eslint": "^3.3.1",
    "eslint-config-airbnb": "^10.0.1",
    "eslint-plugin-import": "^1.14.0",
    "eslint-plugin-jsx-a11y": "^2.1.0",
    "eslint-plugin-react": "^6.1.2",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "ignore-styles": "^5.0.1",
    "jquery": "^3.1.1",
    "js-cookie": "^2.1.3",
    "jsdom": "^9.4.2",
    "json-loader": "^0.5.4",
    "mocha": "^3.0.2",
    "node-sass": "^3.8.0",
    "node-uuid": "^1.4.7",
    "nodemon": "^1.10.2",
    "postcss-loader": "^0.10.1",
    "react": "^16.2.0",
    "react-addons-test-utils": "^15.3.2",
    "react-dnd": "^2.1.4",
    "react-dnd-html5-backend": "^2.1.2",
    "react-dom": "^16.2.0",
    "react-hot-loader": "^3.1.3",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.9",
    "redux": "^3.5.2",
    "redux-immutable": "^3.0.8",
    "redux-logger": "^2.6.1",
    "redux-thunk": "^2.1.0",
    "reselect": "^2.5.4",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.0.0",
    "sfs4900": "0.0.1",
    "shebang-loader": "0.0.1",
    "sinon": "^1.17.5",
    "sinon-as-promised": "^4.0.2",
    "sinon-chai": "^2.8.0",
    "sinon-stub-promise": "^3.0.1",
    "style-loader": "^0.13.1",
    "supertest": "^2.0.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.15.0",
    "xregexp": "^3.1.1"
  }
}
